    "@gordonb/pipe": "jsr:@gordonb/pipe@0.1.0",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/path": "jsr:@std/path@^1",
    "chokidar": "npm:chokidar@^4.0.3",
    "zod": "npm:zod@^3.20.2",
    "zod-opts": "npm:zod-opts@0.1.8",
    "@effectionx/bdd": "jsr:@effectionx/bdd@0.2.2",
    "@effectionx/process": "jsr:@effectionx/process@0.5.0",
    "@effectionx/stream-helpers": "jsr:@effectionx/stream-helpers@0.3.0",
    "@effectionx/signals": "npm:@effectionx/signals@0.3.0"
  },
  "lint": {
    "rules": {
      "exclude": ["prefer-const", "require-yield"]
