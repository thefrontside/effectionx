{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "types": ["k6"],
    "baseUrl": ".",
    "paths": {
      "k6": ["node_modules/@types/k6/index.d.ts"],
      "k6/*": ["node_modules/@types/k6/*/index.d.ts"],
      "k6/websockets": [
        "node_modules/@types/k6/experimental/websockets/index.d.ts"
      ]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "../node"
    },
    {
      "path": "../stream-helpers"
    },
    {
      "path": "../test-adapter"
    }
  ]
}
