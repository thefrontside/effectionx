{
  "name": "@effectionx/watch",
  "version": "0.1.1",
  "license": "MIT",
  "exports": {
    ".": "./main.ts",
    "./lib": "./mod.ts"
  },
  "imports": {
    "effection": "npm:effection@^3",
    "ignore": "npm:ignore@^7.0.3",
