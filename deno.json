{
  "imports": {
    "effection": "npm:effection@^3",
    "@deno/dnt": "jsr:@deno/dnt@0.42.3",
    "@std/path": "jsr:@std/path@^1",
    "zod": "npm:zod@3.23.8",
    "@std/fs": "jsr:@std/fs@^1"
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "dom.iterable",
      "dom"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "revolution"
  },
  "lint": {
    "rules": {
      "exclude": [
        "prefer-const",
        "require-yield"
      ]
    },
    "exclude": [
      "tasks"
    ]
  },
  "workspace": [
    "./context-api",
    "./deno-deploy",
    "./bdd",
    "./jsonl-store",
    "./fx",
    "./raf",
    "./task-buffer",
    "./test-adapter",
    "./timebox",
    "./tinyexec",
    "./watch",
    "./websocket",
    "./worker",
    "./stream-helpers",
    "./signals",
    "./process"
  ],
  "tasks": {
    "generate-importmap": "deno run --allow-read --allow-write tasks/generate-importmap.ts"
  }
}
